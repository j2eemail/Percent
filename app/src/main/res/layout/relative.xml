<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reative_txt1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/Cyan1"
        android:gravity="center"
        android:text="w:30%,h:30%"
        android:textColor="@android:color/black"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="30%" />

    <!-- 相对于父控件的宽度的百分比
    app:layout_widthPercent
    -->
    <!-- 相对于父控件的高度的百分比
    app:layout_heightPercent
    -->

    <TextView
        android:id="@+id/reative_txt6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/reative_txt1"
        android:background="@color/Chartreuse1"
        android:gravity="center"
        android:text="w:40%,h:20%"
        android:textColor="@android:color/black"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="40%" />

    <!--根据比例设置该控件相对于父控件的边距
    app:layout_marginLeftPercent
    app:layout_marginTopPercent
    app:layout_marginRightPercent
    app:layout_marginBottomPercent
    -->

    <TextView
        android:id="@+id/reative_txt7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/reative_txt1"
        android:background="@color/Chartreuse1"
        android:gravity="center"
        android:text="w:20%,h:20%"
        android:textColor="@android:color/black"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="20%" />

    <TextView
        android:id="@+id/reative_txt2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/Cyan1"
        android:gravity="center"
        android:text="w:30%,h:30%"
        android:textColor="@android:color/black"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="30%" />

    <TextView
        android:id="@+id/reative_txt3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/Cyan1"
        android:gravity="center"
        android:text="w:30%,h:30%"
        android:textColor="@android:color/black"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="30%" />

    <TextView
        android:id="@+id/reative_txt8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/reative_txt3"
        android:background="@color/DeepPink"
        android:gravity="center"
        android:text="ratio4：3"
        android:textColor="@android:color/black"
        app:layout_aspectRatio="133%"
        app:layout_marginBottomPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_widthPercent="30%" />
    <!--    使用layout_aspectRatio时只需设置单独的宽或高的高分比也可以设置宽高的固定值DP    -->
    <!--如果你想让你的控件成一定比例的形式诸如3:2你可以设置如下，这将使画面比例3:2(1.50:1)-->
    <!--如果你想让你的控件成一定比例的形式诸如4:3你可以设置如下，这将使画面比例4:3(1.33:1)-->
    <!--    宽高比多于两位四舍五入    -->

    <!--    app:layout_marginStartPercent="5%" 距离左边控件的距离
            app:layout_marginEndPercent ="5%"  距离右边控件的距离
            可作用于与父控件距离
              -->

    <TextView
        android:id="@+id/reative_txt4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/Cyan1"
        android:gravity="center"
        android:text="w:30%,h:30%"
        android:textColor="@android:color/black"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="30%" />

    <TextView
        android:id="@+id/reative_txt5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@color/Cyan1"
        android:gravity="center"
        android:text="w:30%,h:30%"
        android:textColor="@android:color/black"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="30%" />

</android.support.percent.PercentRelativeLayout>